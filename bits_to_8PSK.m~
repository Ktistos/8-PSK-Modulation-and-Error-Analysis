function X = bits_to_8PSK(b)
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% X = bits_to_8PSK(b)                                                           
% OUTPUT                                                                           
%      X: 8PAM symbol sequence                                                 
%                                                                               
% INPUT                                                                             
%      b: bit sequence to be modulated
%                                                                               
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
b=transpose(b);

%initializing the variables for efficiency
tmp_bits=zeros(1,3);
X=zeros(2,length(b)/3);
index=1;
%loop thro
for count=1:3:length(b)
        
    tmp_bits(1)=b(count);
    tmp_bits(2)=b(count+1);
    tmp_bits(3)=b(count+2);
    
    X(:,index)=map_bits_to_PSK_symbol(tmp_bits);
    
    end


end